<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.longyuan.zhihuretrofitvolley.comment.CommentActivity"
    tools:showIn="@layout/activity_comment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_longComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_comments_long" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_longComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/title_shortComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_comments_long" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_shortComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
